<p>Recipe: <%= @recipe.name %></p>
<p>Ingredients: <%= @recipe.ingredients %></p>
<p>Cooke Time: <%= @recipe.cook_time %></p>

<form class="" action="/recipes/<%= @recipe.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<input type="text" name="name" value="" placeholder="name">
<input type="text" name="ingredients" value="" placeholder="ingredients">
<input type="text" name="cook_time" value="" placeholder="cook_time">
<input type="submit" name="" value="submit">
</form>
